{
  "baseBranchPatterns": [
    "develop",
    "next"
  ],
  "enabledManagers": [
    "npm",
    "pip_requirements",
    "poetry"
  ],
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "description": "Update poetry.lock to keep transitive dependencies up-to-date once a week as well.",
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Group patch-only updates to develop weekly to cut down on PR noise.",
      "groupName": "Dependency Patch Updates for Develop",
      "matchBaseBranches": [
        "develop"
      ],
      "schedule": [
        "before 3am on Friday"
      ],
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      }
    },
    {
      "description": "Schedule next updates.",
      "groupName": "Dependency Updates for Next",
      "matchBaseBranches": [
        "next"
      ],
      "schedule": [
        "before 2am on Tuesday"
      ]
    }
  ],
  "rangeStrategy": "bump"
}
