{
    "name": "Nautobot Dev Container",
    "dockerComposeFile": [
        "../development/docker-compose.yml",
        "../development/docker-compose.postgres.yml",
        "../development/docker-compose.dev.yml",
        "../development/docker-compose.nohealthcheck.yml"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "service": "nautobot",
    "shutdownAction": "stopCompose",
    "containerEnv": {
        "INVOKE_NAUTOBOT_PROJECT_NAME": "development"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "EditorConfig.EditorConfig",
                "GitHub.vscode-pull-request-github",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "samuelcolvin.jinjahtml",
                "tamasfe.even-better-toml",
                "github.vscode-github-actions",
                "eamodio.gitlens"
            ],
            "settings": {
                // Global editor settings
                "editor.codeActionsOnSave": {
                    "source.fixAll.markdownlint": "explicit"
                },
                "editor.formatOnPaste": true,
                "editor.formatOnSave": true,
                // JSON settings
                "json.format.keepLines": true,
                "workbench.settings.useSplitJSON": false,
                // Markdown settings
                "[markdown]": {
                    "editor.defaultFormatter": "charliermarsh.ruff"
                },
                // Python settings
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    },
                    // When rebuilding the devcontainer, `Developer: Reload Window` must be
                    // executed for the Ruff formatter to be recognized by the settings.
                    // See: https://github.com/microsoft/vscode/issues/189839
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true
                },
                "python.analysis.extraPaths": [
                    "${workspaceFolder}"
                ],
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.pythonPath": "/usr/local/bin/python",
                "launch": {
                    "version": "0.2.0",
                    "configurations": [
                        {
                            "name": "Local: Nautobot",
                            "type": "debugpy",
                            "request": "launch",
                            "args": [
                                "runserver",
                                "--config=development/nautobot_config.py"
                            ],
                            "django": true,
                            "autoStartBrowser": false,
                            "program": "${workspaceFolder}/nautobot/core/cli/__main__.py",
                            "justMyCode": false
                        },
                        {
                            "name": "Local: Nautobot-Celery",
                            "type": "debugpy",
                            "request": "launch",
                            "args": [
                                "celery",
                                "worker",
                                "-l",
                                "INFO",
                                "--events"
                            ],
                            "django": true,
                            "autoStartBrowser": false,
                            "program": "${workspaceFolder}/nautobot/core/cli/__main__.py",
                            "justMyCode": false
                        }
                    ]
                }
            }
        }
    },
    "workspaceFolder": "/source",
    "postCreateCommand": "bash .devcontainer/postCreateCommand.sh",
    "overrideCommand": true
}
